%% -*- mode: erlang; erlang-indent-level: 2; indent-tabs-mode: nil -*-
%% ex: ts=2 sw=2 ft=erlang et
[
 {wocky, [
   {start_ejabberd, true}
 ]},

 {cqerl, [
   {maps, true},
   {cassandra_nodes, [{"127.0.0.1", 9042}]},
   {auth, {cqerl_auth_plain_handler, [{"cassandra", "cassandra"}]}}
 ]},

 {kernel, [
   {start_pg2, true}
 ]},

 {sasl, [
   {sasl_error_logger, false},
   {errlog_type, error},
   {error_logger_mf_dir, "log/sasl"},
   {error_logger_mf_maxbytes, 10485760},
   {error_logger_mf_maxfiles, 10}
 ]},

 {lager, [
   {log_root, "log"},
   {crash_log, "crash.log"},
   {handlers, [
     {lager_console_backend, [info, {lager_default_formatter,[{eol, "\r\n"}]}]},
     {lager_file_backend, [
        {file, "wocky.log"},
        {level, info},
        {size, 2097152},
        {date, "$D0"},
        {count, 5}
     ]}
   ]}
 ]},

 {mnesia, [
   {dir, "log/mnesia"}
 ]}

